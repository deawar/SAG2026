# Silent Auction Gallery - Environment Configuration Template
# Copy this file to .env and update values for your environment
# NEVER commit actual .env files to version control

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Node environment (development, staging, production)
NODE_ENV=development

# Server port
PORT=5000

# Log level (debug, info, warn, error)
LOG_LEVEL=debug

# API URL (for frontend)
API_URL=http://localhost:5000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL host (use 'postgres' when running in Docker)
DATABASE_HOST=localhost

# PostgreSQL port
DATABASE_PORT=5432

# Database name
DATABASE_NAME=sag_db

# Database user
DATABASE_USER=postgres

# Database password (CHANGE THIS IN PRODUCTION!)
DATABASE_PASSWORD=postgres

# SSL for database connection (true/false)
DATABASE_SSL=false

# Database connection pool settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================

# JWT secret key (MUST be a strong random string in production!)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# JWT expiration time (e.g., 24h, 7d)
JWT_EXPIRES_IN=24h

# Refresh token secret (MUST be different from JWT_SECRET!)
REFRESH_TOKEN_SECRET=your_super_secret_refresh_token_key_change_this_in_production

# Refresh token expiration time
REFRESH_TOKEN_EXPIRES_IN=7d

# ============================================================================
# TOTP (TWO-FACTOR AUTHENTICATION)
# ============================================================================

# TOTP issuer name (appears in authenticator apps)
TOTP_ISSUER=SAG2026

# TOTP time window (number of time periods to accept)
TOTP_WINDOW=1

# ============================================================================
# EMAIL CONFIGURATION (SMTP)
# ============================================================================

# SMTP server hostname
SMTP_HOST=smtp.gmail.com

# SMTP server port
SMTP_PORT=587

# SMTP username (usually email address)
SMTP_USER=your-email@gmail.com

# SMTP password (use app-specific password for Gmail)
SMTP_PASSWORD=your-app-specific-password

# Email sender address
EMAIL_FROM=noreply@sag2026.local

# Email sender name
EMAIL_FROM_NAME=SAG2026

# ============================================================================
# PAYMENT GATEWAY (STRIPE)
# ============================================================================

# Stripe secret key (sk_test_... or sk_live_...)
STRIPE_SECRET_KEY=sk_test_your_secret_key

# Stripe publishable key (pk_test_... or pk_live_...)
STRIPE_PUBLIC_KEY=pk_test_your_public_key

# Stripe webhook secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================================================
# EXTERNAL APIs
# ============================================================================

# Weather API key (for auction recommendations)
WEATHER_API_KEY=your_weather_api_key

# Google OAuth configuration
GOOGLE_OAUTH_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your_client_secret

# Google OAuth callback URL
GOOGLE_OAUTH_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# ============================================================================
# REDIS CACHING
# ============================================================================

# Redis host
REDIS_HOST=localhost

# Redis port
REDIS_PORT=6379

# Redis password (leave empty if no password)
REDIS_PASSWORD=

# Redis database number
REDIS_DB=0

# ============================================================================
# CORS CONFIGURATION
# ============================================================================

# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,http://127.0.0.1:3000

# Allow credentials in CORS requests
CORS_CREDENTIALS=true

# ============================================================================
# MONITORING & ERROR TRACKING
# ============================================================================

# Sentry DSN (for error tracking) - Optional
SENTRY_DSN=

# New Relic License Key (for APM) - Optional
NEW_RELIC_LICENSE_KEY=

# New Relic App Name
NEW_RELIC_APP_NAME=SAG2026

# DataDog API Key (for monitoring) - Optional
DATADOG_API_KEY=

# ============================================================================
# SECURITY
# ============================================================================

# HTTPS/SSL enforcement
REQUIRE_HTTPS=false

# Session timeout (in minutes)
SESSION_TIMEOUT=30

# Maximum login attempts before lockout
MAX_LOGIN_ATTEMPTS=5

# Lockout duration (in minutes)
LOCKOUT_DURATION=15

# Password minimum length
PASSWORD_MIN_LENGTH=8

# Password must contain uppercase letters
PASSWORD_UPPERCASE=true

# Password must contain numbers
PASSWORD_NUMBERS=true

# Password must contain special characters
PASSWORD_SPECIAL_CHARS=true

# ============================================================================
# PAGINATION
# ============================================================================

# Default items per page
DEFAULT_PAGE_SIZE=20

# Maximum items per page
MAX_PAGE_SIZE=100

# ============================================================================
# FILE UPLOADS
# ============================================================================

# Maximum file upload size (in MB)
MAX_FILE_SIZE=10

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=.pdf,.jpg,.jpeg,.png,.doc,.docx

# Upload directory
UPLOAD_DIR=./uploads

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Timezone
TIMEZONE=America/New_York

# Date format
DATE_FORMAT=YYYY-MM-DD

# Time format
TIME_FORMAT=HH:mm:ss

# Currency code
CURRENCY_CODE=USD

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable two-factor authentication
FEATURE_2FA=true

# Enable email notifications
FEATURE_EMAIL_NOTIFICATIONS=true

# Enable SMS notifications
FEATURE_SMS_NOTIFICATIONS=false

# Enable real-time updates via WebSocket
FEATURE_WEBSOCKET=true

# Enable payment processing
FEATURE_PAYMENTS=true

# Enable auction bidding
FEATURE_BIDDING=true

# Enable admin dashboard
FEATURE_ADMIN_DASHBOARD=true

# ============================================================================
# DEVELOPMENT SETTINGS (Only for development!)
# ============================================================================

# Enable request logging
DEBUG_REQUESTS=false

# Enable database query logging
DEBUG_QUERIES=false

# Skip email sending (log instead)
SKIP_EMAIL=true

# Seed test data on startup
SEED_TEST_DATA=false

# ============================================================================
# pgAdmin Configuration (Development Only)
# ============================================================================

# pgAdmin email
PGADMIN_EMAIL=admin@example.com

# pgAdmin password
PGADMIN_PASSWORD=admin

# ============================================================================
# Notes
# ============================================================================
#
# 1. SECURITY:
#    - Change all SECRET and PASSWORD values in production
#    - Use strong, random values (use: openssl rand -base64 32)
#    - Store sensitive values in environment variables or secret vault
#    - NEVER commit actual .env files
#
# 2. PRODUCTION:
#    - Set NODE_ENV=production
#    - Use HTTPS (REQUIRE_HTTPS=true)
#    - Use strong database password
#    - Use production Stripe keys (sk_live_)
#    - Configure proper CORS origins
#    - Enable error tracking (Sentry DSN)
#
# 3. DATABASE:
#    - In Docker, use 'postgres' as host (service name)
#    - Locally, use 'localhost' as host
#    - Create strong password for production
#
# 4. EMAIL:
#    - For Gmail: Generate app-specific password
#    - For other providers: Get SMTP credentials
#    - Test email delivery before deploying
#
# 5. PAYMENTS:
#    - Test keys: sk_test_* / pk_test_*
#    - Live keys: sk_live_* / pk_live_*
#    - Webhook secret from Stripe dashboard
#
# ============================================================================
